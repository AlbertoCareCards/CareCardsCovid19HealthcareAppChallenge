<div class="mind-result {{styleNamespace}}">
  <img src="assets/images/game/results/help.png">

  <h1 class="mind-big-text">{{t "results.find-help"}}</h1>

  <hr>

  <h2 class="mind-semi-big-text">
    {{t "results.find-help-header"}}
  </h2>

  <p class="mind-text">
    {{t "results.find-help-description"}}
  </p>

  <div class="mind-options-wrapper">
    <Common::Dropdown @options={{availableCountries}}
                      @onChangeCallback={{this.selectCountry}}
                      @placeholder="common.select-country"/>
  </div>

  {{#if selectedCountry}}
    <p class="mind-text">
      {{selectedCountry.description}}
    </p>

    <Game::Results::DoctorSearch::Steps @selectLanguage={{selectLanguage}}
                                        @selectedCountry={{selectedCountry}}
                                        @selectedLanguage={{selectedLanguage}}
                                        @languageOptions={{options}}/>
  {{/if}}

  <hr>

  <button class="mind-button mind-small-text" {{on "click" returnToMenu}}>
    back to follow ups
  </button>
</div>